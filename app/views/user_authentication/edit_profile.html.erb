<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="image_box">Image</label>
        <input id="image_box" name="query_image" value="<%= @current_user.image %>">
      </div>
      <div>
        <label for="username_box">Username</label>
        <input id="username_box" name="query_username" value="<%= @current_user.username %>">
      </div>
      <div>
        <label for="quote_box">Quote</label>
        <textarea id="quote_box" name="query_quote" rows="3"><%= @current_user.quote %></textarea> 
      </div>
      <div>
        <label for="trackings_count_box">Trackings count</label>
        <input id="trackings_count_box" name="query_trackings_count" value="<%= @current_user.trackings_count %>">
      </div>
      <div>
        <label for="competitions_count_box">Competitions count</label>
        <input id="competitions_count_box" name="query_competitions_count" value="<%= @current_user.competitions_count %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
